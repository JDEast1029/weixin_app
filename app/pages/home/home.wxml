<scroll-view>
  <swiper 
    indicator-dots='true' 
    autoplay='true'
    indicator-active-color='#eb615c'
    duration='500'
    interval='3000'
  >
    <block wx:for="{{imgUrls}}" wx:key="key">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
</scroll-view>